@model Post

@{
    ViewData["Title"] = "Delete Post";
}


<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <h4> you sure you want to delete this product?</h4>
        <dl class="row mt-3">
            <dt class="col-md-3">Title</dt>
            <dd class="col-md-9">@Model.Title</dd>
            <dt class="col-md-3">Author</dt>
            <dd class="col-md-9">@Model.Author</dd>
        </dl>

        <form asp-action="DeleteConfirm" asp-controller="Post" method="post">
            <input asp-for="Id" hidden>
            <button type="submit" class="btn btn-danger mt-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
        </form>
    </div>
</div>